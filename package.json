{
  "name": "aurora-ui",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@10.4.1",
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
